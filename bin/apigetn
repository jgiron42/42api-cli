#!/bin/bash
TOKEN=$(get_token $UID42 $SECRET42 )

[ -z "$URL42" ] && URL42=https://api.intra.42.fr

if command -v jq &> /dev/null
then
	BEAUTIFIER='jq .'
else
	BEAUTIFIER='json-beautifier'
fi

for I in $(seq $2)
do
	if [ -t 1 ]
	then
		DATA=$(curl -s -H 'If-None-Match:  W/"4f53cda18c2baa0c0354bb5f9a3ecbe5"' -H  "Authorization: Bearer $TOKEN" "$URL42/v2/$1?per_page=100&page=$I&$3" -g)
		if [ ! -n "$DATA" ]
		then
			break
		fi
		echo $DATA | $BEAUTIFIER
	else
		printf %-10d $I >&2
		DATA=$(curl -s -H 'If-None-Match:  W/"4f53cda18c2baa0c0354bb5f9a3ecbe5"' -H  "Authorization: Bearer $TOKEN" "$URL42/v2/$1?per_page=100&page=$I&$3" -g)
		if [ ! -n "$DATA" ]
		then
			break
		fi
		echo $DATA | $BEAUTIFIER

		printf "\b\b\b\b\b\b\b\b\b\b" >&2
	fi
	sleep 0.5
done
